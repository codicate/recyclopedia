{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "comments": {
      "collection": "comment"
    },
    "tags": {
      "collection": "tags"
    },
    "votes": {
      "collection": "vote"
    },
    "daysUntilDeletion": {
      "default": 0,
      "type": "integer"
    },
    "recycled": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}
